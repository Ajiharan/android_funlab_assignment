<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewStory">
    <EditText
        android:id="@+id/txtStory_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:background="@drawable/search_border"
        android:width="250dp"
        android:padding="8dp"
        android:fontFamily="casual"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="search story by title"
        />
    <Button
        android:id="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="70dp"
        android:layout_height="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/view_button"
        android:layout_gravity="center"
        android:text="back"
        />
    <View
        android:id="@+id/view_top"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStory_search"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="1dp"/>
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_marginTop="60dp"
        android:id="@+id/view_story_details"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/view_top"
        android:layout_height="match_parent">

    </com.baoyz.swipemenulistview.SwipeMenuListView>
</androidx.constraintlayout.widget.ConstraintLayout>