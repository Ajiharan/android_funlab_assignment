<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".UserHomeScreen">
    <ScrollView
        android:layout_marginTop="10dp"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/story_img"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/k1"
                    />

                <Button
                    android:id="@+id/btn_view_story"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:layout_gravity="center"
                    android:text="View Stories"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/poem_img"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/i3"
                    />

                <Button
                    android:id="@+id/btn_view_poem"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="View poems"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/videos_img"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/i4"
                    />

                <Button
                    android:id="@+id/btn_view_video"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:text="View videos"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fun_img"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/i5"
                    />

                <Button
                    android:id="@+id/btn_view_fun"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="View fun"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>